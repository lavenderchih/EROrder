@model ProductListViewModel

@{
    ViewData["Title"] = Model.PageTitle;
}

<div class="container">
    <div class="row">
        <div class="col-md-12">
            <h2>@Model.PageTitle</h2>
            <p class="text-muted">總共有 @Model.TotalCount 項產品</p>
            
            <div class="row">
                @foreach (var product in Model.Products)
                {
                    <div class="col-md-4 mb-4">
                        <div class="card border-secondary">
                            <div class="card-body">
                                <h5 class="card-title">
                                    @product.Name
                                    @if (!product.IsActive)
                                    {
                                        <span class="badge bg-secondary" style="font-size: x-small;">停售</span>
                                    }
                                </h5>
                                <p class="card-text">@product.Description</p>
                                <p class="card-text">
                                    <strong>價格：NT$ @product.Price.ToString("N0")</strong>
                                </p>
                                <p class="card-text">
                                    <small class="text-muted">建立日期：@product.CreatedDate.ToString("yyyy/MM/dd")</small>
                                </p>
                            </div>
                        </div>
                    </div>
                }
            </div>
            
            <div class="mt-4">
                <a asp-action="Index" class="btn btn-outline-primary">回到首頁</a>
            </div>
        </div>
    </div>
</div>
